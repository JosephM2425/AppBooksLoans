<p id="notice"><%= notice %></p>
<section class=" dark:text-white body-font ">
  <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
      <% if @book.cover.attached? %>
        <%= image_tag(@book.cover) %>
      <% else %>
        <img src="https://picsum.photos/id/1005/300/400">
      <% end %>
    </div>
    <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium dark:text-white"> <%= @book.title %> </h1>
      <p class="mb-8 leading-relaxed"> Authors: 
        <% @book.authors.each do |author| %>
          <%= author.fullName %>
        <% end %>
      </p>
      <p class="mb-8 leading-relaxed">
        <strong>Publisher:</strong>
        <%= @book.publisher %>
      </p>
      <p class="mb-8 leading-relaxed">
        <strong>Edition:</strong>
        <%= @book.edition %>
      </p>
      <p class="mb-8 leading-relaxed">
        <strong>Isbn:</strong>
        <%= @book.isbn %>
      </p>
      <p class="mb-8 leading-relaxed">
        <strong>Quantity:</strong>
        <%= @book.quantity %>
      </p>
    </div>
  </div>
</section>

