<header class="text-gray-600  body-font dark:text-white">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center ">
    <a class="flex title-font font-medium items-center text-gray-900 dark:text-white  mb-4 md:mb-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
      </svg>
      <span class="ml-3 text-xl">Project Joseph Murillo</span>
    </a>
    <nav class="md:mr-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-400	flex flex-wrap items-center text-base justify-center"> 
      <% if user_signed_in? %>
        <%= link_to 'My Active loans', my_loans_path, class:"mr-5 hover:text-gray-900" %>
        <%= link_to 'Books', books_path, class:"mr-5 hover:text-gray-900" %>
        
        <% if current_user.admin? %>
          <div class="dropdown inline-block relative">
            <button class="bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded inline-flex items-center">
              <span class="mr-1">Menu Admin</span>
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/> </svg>
            </button>
            <ul class="dropdown-menu static hidden text-gray-700 pt-1">
              <li> <%= link_to 'Books', books_path, class:"rounded-t bg-gray-200 hover:bg-gray-400 py-2 px-4 block whitespace-no-wrap" %> </li>
              <li> <%= link_to 'Authors', authors_path, class:"rounded-t bg-gray-200 hover:bg-gray-400 py-2 px-4 block whitespace-no-wrap" %> </li>    
              <li> <%= link_to 'Loans', loans_path, class:"rounded-t bg-gray-200 hover:bg-gray-400 py-2 px-4 block whitespace-no-wrap" %> </li>
            </ul>
          </div>
        <% end %>
      <% end %>
    </nav>    
    <% if user_signed_in? %>
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class:" inline-flex items-center text-white  bg-black border-0 py-1 px-4 focus:outline-none rounded text-base mt-4 md:mt-0 mx-3" %>
        <div class="flex-none card px-5 dark:bg-customPrimaryColor">
          <div class="avatar ">
            <div class="rounded-full w-10 h-10 m-1">
              <% if current_user.avatar.attached? %>
                <%= image_tag url_for(current_user.avatar) %>
              <% else %>
                <img src="https://icon-library.com/images/default-profile-icon/default-profile-icon-16.jpg">
              <% end %>
            </div>
            <%= link_to 'Profile', profile_path, class:"btn btn-link btn-active dark:text-white" %>
          </div>
        </div>
        <%= link_to change_theme_users_path, method: :patch, remote: true, class:"m-5 hover:text-gray-900" do %>
        <i class='fas <%= current_user.dark? ? 'fa-sun' : 'fa-moon' %>' data-target='icon-ui'></i>
        <% end %>
    <% else %>
         <%= link_to 'Sign In', new_user_session_path, class:" inline-flex items-center bg-black text-white  border-0 py-1 px-3 focus:outline-none rounded text-base mt-4 md:mt-0" %>
    <% end %>
  </div>
</header>