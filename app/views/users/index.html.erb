<!-- component -->
<div>
      <table class="min-w-full table-auto">
        <thead class="justify-between">
          <tr class="bg-gray-800">
            <th class="px-16 py-2">
              <span class="text-gray-300"></span>
            </th>
            <th class="px-16 py-2">
              <span class="text-gray-300">Name</span>
            </th>
            <th class="px-16 py-2">
              <span class="text-gray-300">Email</span>
            </th>
            <th class="px-16 py-2">
              <span class="text-gray-300">Created At</span>
            </th>

            <th class="px-16 py-2">
              <span class="text-gray-300">Role</span>
            </th>

            <th class="px-16 py-2">
              <span class="text-gray-300">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-gray-200">
          <% @users.each do |user| %>
          <tr class="bg-white border-4 border-gray-200">
            <td class="px-16 py-2 flex flex-row items-center">
                <% if user.avatar.attached? %>
                    <%= image_tag url_for(user.avatar), class:"h-8 w-8 rounded-full object-cover " %>
                <% else %>
                    <img src="https://icon-library.com/images/default-profile-icon/default-profile-icon-16.jpg" class="h-8 w-8 rounded-full object-cover ">
                <% end %>
            </td>
            <td>
              <span class="text-center ml-2 font-semibold"> <%= user.fullName %> </span>
            </td>
            <td class="px-16 py-2">
                <span> <%= user.email %> </span>
            </td>
            <td class="px-16 py-2">
              <span> <%= user.created_at %> </span>
            </td>
            <td class="px-16 py-2">
              <span> <%= user.role %> </span>
            </td>

            <td class="px-16 py-2">
              <span class="text-green-500">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 h5 "
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#2c3e50"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" />
                  <path d="M5 12l5 5l10 -10" />
                </svg>
              </span>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>